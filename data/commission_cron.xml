<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_actions_server_commission_sync" model="ir.actions.server">
        <field name="name">Run Sales Commission Sync</field>
        <field name="model_id" ref="model_sales_commission_service"/>
        <field name="binding_model_id" ref="model_sales_commission_service"/>
        <field name="state">code</field>
        <field name="code">action = env["sales.commission.service"].run_commission_sync()</field>
    </record>

    <record id="ir_cron_sales_commission_sync" model="ir.cron">
        <field name="name">Sales Commission Sync</field>
        <field name="model_id" ref="model_sales_commission_service"/>
        <field name="state">code</field>
        <field name="code">model.run_commission_sync()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>

